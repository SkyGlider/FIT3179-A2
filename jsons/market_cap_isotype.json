{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 500,
  "title":"Top 10 Cryptocurrencies by Market Capitalization",
  "data": {
    "url":"https://raw.githubusercontent.com/SkyGlider/FIT3179-A2/main/datasets/marketcap_vega.csv"
  },
  "transform": [
    {
      "calculate": "{'coin': 'ðŸ’°'}[datum.type]",
      "as": "emoji"
    },
    {"window": [{"op": "rank", "as": "rank"}], "groupby": ["coin"]}
  ],
  "mark": {"type": "text", "baseline": "middle"},
  "encoding": {
    "x": {"field": "rank", "type": "ordinal", "axis": null},
    "y": {"field": "coin", "type": "nominal", "title":"Cryptocurrencies","sort": null},
    "text": {"field": "emoji", "type": "nominal"},
    "size": {"value": 30},
    "tooltip": [
      {
        "field": "name",
        "type": "nominal",
        "title": "Cryptocurrency Name"
      },
      {
        "field": "coin",
        "type": "nominal",
        "title": "Symbol"
      },
      {
        "field": "marketcap",
        "type": "quantitative",
        "title": "Market Cap (Oct 2021)",
        "format":","
      },
      {
        "field": "supply",
        "type": "quantitative",
        "title": "Total Supply (Oct 2021)",
        "format":","
      },
      {
        "field": "price",
        "type": "quantitative",
        "title": "Price (Oct 2021)",
        "format":","
      }
    ]
  },
  "config": {
    "view": {"stroke": ""},
    "axisY": {
      "offset": 10
    }
  }
}
