{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1050,
  "height": 500,
  "layer":[
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#E9EEE7"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SkyGlider/FIT3179-A2/main/datasets/dataset_latlong.csv"
      },
      "transform": [{
          "lookup": "country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {
          "calculate": "datum.percentage * 1",
          "as": "Percentage"
        }
      ],
      "layer": [
        {
          "mark": {"type": "geoshape", "stroke": "#FFFFFF", "strokeWidth": 0.5},
          "projection": {
            "type": "equirectangular"
          },
          "encoding": {
            "shape": {
                "field": "geo",
                "type": "geojson"
              },
            "color": {
              "field": "Percentage",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [2.5, 5, 7.5, 10],
                "range": ["#FFECAD", "#fedc63","#FFC300","#FDA123", "#A93D03"]
              }
            },
            "tooltip": [
              {
                "field": "country",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "crypto_owners",
                "type": "quantitative",
                "format":","
              },
              {
                "field": "Percentage",
                "type": "quantitative"
              }
            ]
          }
        }
      ]
    }
  ],
  "config": {
    "view": {
       "stroke": "transparent"
    }
  }
}
