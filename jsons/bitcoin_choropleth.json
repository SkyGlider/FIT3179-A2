{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Percantage of Crypto Owners Around The World",
  "width": 1150,
  "height": 600,
  "params":[
    {
      "name": "zoom_level", "value": 190,
      "bind": {"input": "range", "min": 190, "max": 1000, "step": 50, "name": "Zoom Level"}
    },
    {
      "name": "center_to",
      "bind": {
        "input": "select",
        "options":[
          [0, 0],
          [-100, 35],
          [-60, -15],
          [15, 55],
          [26, 32],
          [22, -15],
          [50,45],
          [120,45],
          [120,0],
          [135,-30]
        ],
        "labels": [
          "Default",
          "Northern America",
          "Southern America",
          "Europe",
          "Northern Africa",
          "Southern Africa",
          "West Asia",
          "East Asia",
          "Southeast Asia",
          "Oceania"
        ],
        "name": "Region Center"
      }
    }
  ],
  "layer":[
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#E9EEE7"},
          "projection": {
            "type": "equirectangular",
            "center":  {"expr": "center_to"},
            "scale": {"expr": "zoom_level"}
          }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SkyGlider/FIT3179-A2/main/datasets/dataset_latlong.csv"
      },
      "transform": [{
          "lookup": "country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {
          "calculate": "datum.percentage * 1",
          "as": "Percentage"
        }
      ],

      "layer": [
        {
          "mark": {"type": "geoshape", "stroke": "#FFFFFF", "strokeWidth": 0.5},
          "projection": {
            "type": "equirectangular",
            "center":  {"expr": "center_to"},
            "scale": {"expr": "zoom_level"}
          },
          "encoding": {
            "shape": {
                "field": "geo",
                "type": "geojson"
              },
            "color": {
              "field": "Percentage",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [2.5, 5, 7.5, 10],
                "range": ["#FFECAD", "#fedc63","#FFC300","#FDA123", "#A93D03"]
              }
            },
            "tooltip": [
              {
                "field": "country",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "crypto_owners",
                "type": "quantitative",
                "title": "No. of crypto owners",
                "format":","
              },
              {
                "field": "Percentage",
                "title": "% of crypto owners",
                "type": "quantitative"
              }
            ]
          }
        },
        {
          "projection": {
            "type": "equirectangular",
            "center":  {"expr": "center_to"},
            "scale": {"expr": "zoom_level"}
          },
          "mark": {
            "type": "text"
          },
          "encoding": {
            "text": {"field": "country", "type": "nominal"},
            "longitude": {"field": "longitude", "type": "quantitative"},
            "latitude": {"field": "latitude", "type": "quantitative"},
            "opacity": {
              "condition": {
                "test": "datum.country == 'Venezuela'||datum.country == 'Malaysia'||datum.country == 'Australia'",
                "value": 1
              },
              "value": 0
            }
            ,
            "tooltip": [
              {
                "field": "country",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "crypto_owners",
                "type": "quantitative",
                "title": "No. of crypto owners",
                "format":","
              },
              {
                "field": "Percentage",
                "title": "% of crypto owners",
                "type": "quantitative"
              }
            ]
          }
        }
      ]
    }
  ],
  "config": {
    "view": {
       "stroke": "transparent"
    }
  }
}
