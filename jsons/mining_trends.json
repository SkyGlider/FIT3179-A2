{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/SkyGlider/FIT3179-A2/main/datasets/combined-output.csv",
    "format": {"parse": {"date": "date"}}
  },
  "title":"BTC Mining Metrics",

  "repeat": {"column": ["Cost per transaction (USD)", "Mining Difficulty (Hash/S)", "Miner Daily Revenue (USD)"]},
  "spec": {
    "width":335,
    "height":300,
    "layer": [{
      "encoding": {
        "x": {
          "timeUnit": "yearmonth", "field": "date",
          "type":"temporal",
          "axis": {"domain": false, "title":"Month","grid": false,"labelAngle":45},
          "scale": {"domain": [{"year":2014}, {"year":2021}]}
        },
        "y": {
          "field": {"repeat": "column"},
          "aggregate": "average"
          },
        "tooltip":[
          {
            "timeUnit": "yearmonth",
            "field": "date",
            "title":"Month"
          },
          {
            "aggregate": "average",
            "field": {"repeat": "column"},
            "type":"quantitative",
            "format":","
          }
        ]
      },
      "layer":[
        {
          "mark": {"type": "area", "color": "#FDA123"},
          "encoding":{
            "y":{
              "title":""
            }
          },
          "params": [{
              "name": "brush",
              "select": {"type": "interval", "encodings": ["x"]}
            }]
        }
      ]
    }, {
      "transform": [{"filter": {"param": "brush"}}],
      "mark": {"type": "area", "color": "#FDA123"},
      "encoding": {
        "x": {
          "timeUnit": "yearmonth", "field": "date",
          "type":"temporal",
          "scale": {"domain": [{"month": "Jan","year":2010}, {"month": "Sep","year":2021}]}
        },
        "y": {"field": {"repeat": "column"}, "aggregate": "average",
        "axis": {
            "domain": false,
            "labelOffset":-5,
            "labelAlign":"left"
            }},
        "tooltip":[
          {
            "timeUnit": "yearmonth",
            "field": "date",
            "title":"Month"
          },
          {
            "aggregate": "average",
            "field": {"repeat": "column"},
            "type":"quantitative",
            "format":","
          }
        ]
      }
    }
    ]
  }
}
